<h1>Welcome to Chitter! Here's what's trending right now!</h1>

<p><%= link_to 'Got something worth sharing?', new_tweet_path %></p>

<ul class="tweet">
    <% @tweets.each do |tweet| %>
        <li>
            <p>@<%= tweet.user %> says:</p>
            <p></p>
            <p><strong> <%= tweet.message %> </strong></p>
            <p><%= link_to "Show", tweet %> <%= link_to "Edit", edit_tweet_path(tweet) %> <%= link_to 'Delete', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></p>
        </li>
    <% end %>
</ul>
